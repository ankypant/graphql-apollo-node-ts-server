{
  "name": "apollo-server",
  "version": "1.0.0",
  "description": "Apollo server with typescript",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node-dev --clear --ignore-watch node_modules ./src/index.ts",
    "server": "json-server ./src/db/db.json",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll && http-server coverage",
    "generate": "graphql-codegen"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "Ankit Pant",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^3.0.0",
    "apollo-server-express": "^3.0.0",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "graphql": "^15.5.1",
    "graphql-import": "^1.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.7",
    "@graphql-codegen/typescript": "^1.23.0",
    "@graphql-codegen/typescript-resolvers": "^1.20.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/source-map-support": "^0.5.1",
    "@types/supertest": "^2.0.8",
    "jest": "^26.4.2",
    "json-server": "^0.16.0",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
